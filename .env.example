# Copy this file to .env and replace the placeholder values with your actual settings.

# DigitalOcean API Keys
DIGITALOCEAN_API_KEY_1=your_digitalocean_api_key_for_account_1
DIGITALOCEAN_API_KEY_2=your_digitalocean_api_key_for_account_2

# Telegram Bot Settings
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Droplet IDs and Backup Counts
# Format: DROPLET_IDS=id1,id2,id3
# Format: BACKUP_COUNTS=count1,count2,count3
DROPLET_IDS=droplet-id-1,droplet-id-2,droplet-id-3,droplet-id-4
BACKUP_COUNTS=2,2,3,3
